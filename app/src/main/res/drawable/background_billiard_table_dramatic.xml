<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fundo escuro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A0A0A" />
        </shape>
    </item>
    
    <!-- Gradiente radial para simular iluminação das luminárias -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.5"
                android:centerY="0.3"
                android:startColor="#4D2E1A1A"
                android:centerColor="#1A4A4A4A"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Segunda luminária -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="0.3"
                android:centerY="0.25"
                android:startColor="#4D2E1A1A"
                android:centerColor="#1A4A4A4A"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Terceira luminária -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="0.7"
                android:centerY="0.25"
                android:startColor="#4D2E1A1A"
                android:centerColor="#1A4A4A4A"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Mesa de bilhar (forma retangular) -->
    <item android:top="200dp" android:bottom="200dp" android:left="50dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#1B5E20" /> <!-- Verde da mesa -->
            <corners android:radius="8dp" />
            <stroke android:width="3dp" android:color="#3E2723" /> <!-- Borda marrom escura -->
        </shape>
    </item>
    
    <!-- Reflexo na mesa -->
    <item android:top="210dp" android:bottom="210dp" android:left="60dp" android:right="60dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00000000"
                android:centerColor="#1AFFFFFF"
                android:endColor="#00000000" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Bolas de bilhar (círculos pequenos) -->
    <item android:top="280dp" android:left="120dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#F44336" /> <!-- Vermelho -->
        </shape>
    </item>
    
    <item android:top="290dp" android:left="140dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#4CAF50" /> <!-- Verde -->
        </shape>
    </item>
    
    <item android:top="300dp" android:left="160dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#FF9800" /> <!-- Laranja -->
        </shape>
    </item>
    
    <item android:top="310dp" android:left="180dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#9C27B0" /> <!-- Roxo -->
        </shape>
    </item>
    
    <item android:top="320dp" android:left="200dp">
        <shape android:shape="oval">
            <size android:width="12dp" android:height="12dp" />
            <solid android:color="#FFEB3B" /> <!-- Amarelo -->
        </shape>
    </item>
    
    <!-- Reflexos nas bolas -->
    <item android:top="282dp" android:left="122dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <item android:top="292dp" android:left="142dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <item android:top="302dp" android:left="162dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <item android:top="312dp" android:left="182dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <item android:top="322dp" android:left="202dp">
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#80FFFFFF" />
        </shape>
    </item>
    
</layer-list>
