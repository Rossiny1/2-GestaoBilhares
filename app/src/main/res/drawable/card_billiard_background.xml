<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ± FUNDO CARD BILHAR PARA USAR COMO BACKGROUND -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fundo base com gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D3748"
                android:centerColor="#1A202C"
                android:endColor="#0F1419"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Acento verde bilhar sutil no topo -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A10B981" />
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
    
</layer-list>
