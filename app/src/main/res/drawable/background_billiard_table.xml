<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ± FUNDO TEMÃTICO DE MESA DE BILHAR -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base de madeira (mogno) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#654321"
                android:centerColor="#8B4513"
                android:endColor="#A0522D"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Feltro verde da mesa -->
    <item 
        android:top="20dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0D4F3C"
                android:centerColor="#10B981"
                android:endColor="#047857"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Overlay para legibilidade -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AA000000" />
        </shape>
    </item>
    
</layer-list>
