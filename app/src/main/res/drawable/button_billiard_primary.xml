<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ± BOTÃƒO PRIMÃRIO TEMA BILHAR -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_blue_dark"
                        android:endColor="@color/accent_teal"
                        android:angle="135" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- Brilho interno -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#22FFFFFF" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Estado normal -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/accent_teal"
                        android:endColor="@color/primary_blue"
                        android:angle="135" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <!-- Acento verde bilhar sutil -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="40dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1A10B981" />
                    <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
