<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ·ï¸ BACKGROUND PARA ID DO ACERTO -->
<!-- Design inspirado em fichas de bilhar -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fundo principal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF00BCD4"
                android:endColor="#FF0097A7"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Highlight sutil no topo -->
    <item android:top="0dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3DFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list>
