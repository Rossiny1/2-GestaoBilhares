<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ðŸŽ¨ DESIGN SYSTEM PROFISSIONAL - GestaoBilhares -->
    
    <!-- âœ¨ CARDS PADRONIZADOS RESPONSIVOS -->
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:foreground">@drawable/card_ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="AppCard.Primary">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="AppCard.Success">
        <item name="strokeColor">@color/success_green</item>
    </style>
    
    <style name="AppCard.Warning">
        <item name="strokeColor">@color/warning_orange</item>
    </style>
    
    <style name="AppCard.Error">
        <item name="strokeColor">@color/error_red</item>
    </style>
    
    <!-- ðŸ”˜ BOTÃ•ES PADRONIZADOS -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_teal</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="AppButton.Secondary">
        <item name="backgroundTint">@color/button_secondary</item>
    </style>
    
    <style name="AppButton.Success">
        <item name="backgroundTint">@color/button_success</item>
    </style>
    
    <style name="AppButton.Warning">
        <item name="backgroundTint">@color/button_warning</item>
    </style>
    
    <style name="AppButton.Error">
        <item name="backgroundTint">@color/button_error</item>
    </style>
    
    <style name="AppButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- ðŸ“ TEXTOS PADRONIZADOS PROFISSIONAIS -->
    <style name="AppText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="AppText.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="AppText.Subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>
    
    <style name="AppText.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="AppText.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="AppText.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>
    
    <!-- ðŸ·ï¸ TAGS E BADGES -->
    <style name="AppTag">
        <item name="android:background">@drawable/rounded_tag_background</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    
    <!-- ðŸ“„ CAMPOS DE INPUT -->
    <style name="AppTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface_elevated</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
    
    <!-- ðŸ“Š PROGRESS E LOADING -->
    <style name="AppProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary_blue</item>
        <item name="trackColor">@color/surface_secondary</item>
    </style>
    
    <!-- ðŸŽ›ï¸ SWITCHES E CHECKBOXES -->
    <style name="AppSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/primary_blue</item>
        <item name="trackTint">@color/surface_secondary</item>
    </style>
    
    <style name="AppCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- ðŸ“± TOOLBAR E APPBAR -->
    <style name="AppToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface_primary</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="navigationIconTint">@color/text_primary</item>
    </style>
    
    <!-- ðŸŽ¨ DIVISORES -->
    <style name="AppDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/card_stroke</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
    
</resources>
