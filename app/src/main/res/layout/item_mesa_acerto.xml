<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:visibility="visible"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <!-- Título da Mesa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_table"
                app:tint="@color/purple_600" />

            <TextView
                android:id="@+id/tvNumeroMesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesa"
                android:textColor="@color/purple_600"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Mesa M1A" />

            <TextView
                android:id="@+id/tvTipoMesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinuca"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="SINUCA" />

        </LinearLayout>

        <!-- Layout para tipo Fichas -->
        <LinearLayout
            android:id="@+id/layoutFichas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Relógio Inicial e Botão Câmera -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:hint="Relógio Inicial"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRelogioInicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:focusable="false"
                        android:clickable="false"
                        android:longClickable="false"
                        android:cursorVisible="false"
                        android:background="@drawable/rounded_background"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Espaço vazio para manter simetria com o botão da câmera do relógio final -->
                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- Relógio Final e Botão Câmera -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:hint="Relógio Final"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRelogioFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ✅ NOVO: Botão de câmera para foto do relógio -->
                <ImageButton
                    android:id="@+id/btnCameraRelogio"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Tirar foto do relógio final"
                    android:src="@drawable/ic_camera"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Informações de Fichas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <!-- Valor da Ficha -->
                <TextView
                    android:id="@+id/tvValorFicha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Valor Ficha: R$ 0,00"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- Comissão Ficha -->
                <TextView
                    android:id="@+id/tvComissaoFicha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comissão: R$ 0,00"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Fichas Jogadas -->
            <TextView
                android:id="@+id/tvFichasJogadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fichas Jogadas: 0"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- Checkbox Relógio com Defeito -->
            <CheckBox
                android:id="@+id/cbRelogioDefeito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Relógio defeito /Trocado" />

            <!-- Checkbox Relógio Reiniciou -->
            <CheckBox
                android:id="@+id/cbRelogioReiniciou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Relógio Reiniciou (ajustar cálculo)" />

            <!-- Campo Média de Fichas (visível apenas quando checkbox marcado) -->
            <LinearLayout
                android:id="@+id/layoutMediaFichas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Média de Fichas:"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvMediaFichas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/orange_600"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_background_media"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fichas"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Layout para tipo Valor Fixo -->
        <LinearLayout
            android:id="@+id/layoutValorFixo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvValorFixo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Valor Mensal: R$ 0,00"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tipo: Valor Fixo"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- ✅ NOVO: Layout da foto do relógio capturada -->
        <LinearLayout
            android:id="@+id/layoutFotoRelogio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Foto do Relógio Final"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivFotoRelogio"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded_background"
                android:scaleType="centerCrop"
                android:contentDescription="Foto do relógio final da mesa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDataFoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capturada em: 06/01/2025 15:30"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/btnRemoverFoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Remover foto"
                    android:src="@drawable/ic_delete"
                    app:tint="?attr/colorError" />

            </LinearLayout>

        </LinearLayout>

        <!-- Subtotal da Mesa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Subtotal da Mesa"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:textColor="@color/green_600"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="R$ 0,00"
            tools:text="R$ 25,00" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 