<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Vender Mesa"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- SeleÃ§Ã£o da Mesa -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNumeroMesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selecionar Mesa"
                android:inputType="none"
                android:clickable="true"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawablePadding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nome do Comprador -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomeComprador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Comprador *"
                android:inputType="textPersonName"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Telefone do Comprador -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefoneComprador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone do Comprador"
                android:inputType="phone"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- CPF/CNPJ do Comprador -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCpfCnpjComprador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF/CNPJ do Comprador"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Valor da Venda -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary"
            app:prefixText="R$ "
            app:prefixTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etValorVenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor da Venda *"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Data da Venda -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDataVenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data da Venda"
                android:inputType="none"
                android:clickable="true"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ObservaÃ§Ãµes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:hintTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etObservacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ObservaÃ§Ãµes (opcional)"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- BotÃµes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="?attr/colorOnSurface"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vender Mesa"
                app:backgroundTint="?attr/colorPrimary"
                app:icon="@drawable/ic_sell"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
