<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#23273A">

    <!-- Nome da Rota -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintTextColor="#A68EFF"
        app:boxBackgroundColor="#33273A"
        app:boxStrokeColor="#A68EFF"
        app:startIconDrawable="@drawable/ic_route"
        app:startIconTint="#A68EFF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nomeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Rota *"
            android:textColor="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:inputType="textCapWords" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Colaborador Respons치vel -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:hintTextColor="#A68EFF"
        app:boxBackgroundColor="#33273A"
        app:boxStrokeColor="#A68EFF"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="#A68EFF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/colaboradorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Colaborador Respons치vel"
            android:textColor="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:inputType="textCapWords" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Cidades da Rota -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:hintTextColor="#A68EFF"
        app:boxBackgroundColor="#33273A"
        app:boxStrokeColor="#A68EFF"
        app:startIconDrawable="@drawable/ic_location"
        app:startIconTint="#A68EFF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cidadesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidades da Rota"
            android:textColor="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:inputType="textCapWords"
            android:minLines="2"
            android:maxLines="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Dica sobre cidades -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游눠 Separe as cidades por v칤rgula (ex: S칚o Paulo, Santos, Guaruj치)"
        android:textColor="#66FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp" />

    <!-- Campos obrigat칩rios -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Campos obrigat칩rios"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        android:gravity="end" />

</LinearLayout> 