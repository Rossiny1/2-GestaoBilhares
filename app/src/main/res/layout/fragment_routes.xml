<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.routes.RoutesFragment">

    <!-- Conteúdo Principal -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ScrollView principal para toda a tela -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Header com Menu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="@drawable/background_billiard_hall"
                    android:elevation="6dp">

                    <ImageButton
                        android:id="@+id/btnMenu"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_menu_billiard"
                        android:contentDescription="Abrir Menu"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rotas"
                        android:textColor="@color/text_on_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/syncButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@android:drawable/ic_popup_sync"
                        android:contentDescription="Sincronizar Dados"
                        app:tint="@color/primary_blue" />

                </LinearLayout>

                <!-- Cards de resumo com dados reais -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="24dp">

                    <!-- Card Mesas -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.0"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="@color/surface_primary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/primary_blue"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mesas"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:id="@+id/totalMesasCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="@color/primary_blue"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Clientes -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.0"
                        android:layout_marginHorizontal="6dp"
                        app:cardBackgroundColor="@color/surface_primary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/primary_blue"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Clientes"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:id="@+id/totalClientesCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="@color/primary_blue"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Pendências -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.0"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="@color/surface_primary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:strokeColor="@color/primary_blue"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pendências"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="none" />

                            <TextView
                                android:id="@+id/totalPendenciasCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="@color/warning_orange"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Lista de Rotas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rotas"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- RecyclerView para lista de rotas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rotasRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_rota" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- FAB Principal -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Menu de ações"
            android:src="@drawable/ic_add"
            app:fabSize="normal" />

        <!-- Container para FABs expandidos -->
        <LinearLayout
            android:id="@+id/fabExpandedContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone">

            <!-- FAB Manutenção Mesa com Label -->
            <LinearLayout
                android:id="@+id/fabMaintenanceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:alpha="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manutenção Mesa"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabMaintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Manutenção Mesa"
                    android:src="@drawable/ic_build"
                    app:fabSize="mini"
                    app:backgroundTint="?attr/colorPrimary"
                    app:tint="?attr/colorOnPrimary"
                    android:clickable="false" />

            </LinearLayout>

            <!-- FAB Transferir Cliente com Label -->
            <LinearLayout
                android:id="@+id/fabTransferContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:alpha="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transferir Cliente"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Transferir Cliente"
                    android:src="@drawable/ic_transfer"
                    app:fabSize="mini"
                    app:backgroundTint="?attr/colorSecondary"
                    app:tint="?attr/colorOnSecondary"
                    android:clickable="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/surface_primary"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/navigation_item_selected"
        app:itemTextColor="@color/navigation_item_selected"
        app:menu="@menu/navigation_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout> 