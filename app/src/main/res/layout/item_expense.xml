<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/card_background_dark"
    style="@style/AppCard"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/card_billiard_background">

        <!-- Ícone da categoria -->
        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_background_round"
            android:backgroundTint="@color/accent_primary_alpha"
            android:padding="8dp"
            android:src="@drawable/ic_receipt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/accent_primary"
            tools:src="@drawable/ic_receipt" />

        <!-- Descrição da despesa -->
        <TextView
            android:id="@+id/expenseDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Combustível para veículo"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/expenseValue"
            app:layout_constraintStart_toEndOf="@+id/categoryIcon"
            app:layout_constraintTop_toTopOf="@+id/categoryIcon"
            tools:text="Combustível para veículo" />

        <!-- Categoria e rota -->
        <TextView
            android:id="@+id/categoryAndRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Combustível • Rota Centro"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/expenseValue"
            app:layout_constraintStart_toEndOf="@+id/categoryIcon"
            app:layout_constraintTop_toBottomOf="@+id/expenseDescription"
            tools:text="Combustível • Rota Centro" />

        <!-- Valor da despesa -->
        <TextView
            android:id="@+id/expenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 85,50"
            android:textColor="@color/error_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/categoryIcon"
            tools:text="R$ 85,50" />

        <!-- Data e hora -->
        <TextView
            android:id="@+id/expenseDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Há 1 dia"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expenseValue"
            tools:text="Há 1 dia" />

        <!-- Observações (se houver) -->
        <TextView
            android:id="@+id/expenseObservations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Posto BR - Km 150"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/categoryIcon"
            app:layout_constraintTop_toBottomOf="@+id/categoryIcon"
            tools:text="Posto BR - Km 150"
            tools:visibility="visible" />

        <!-- Criado por -->
        <TextView
            android:id="@+id/createdBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Por: João Silva"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/categoryIcon"
            app:layout_constraintTop_toBottomOf="@+id/expenseObservations"
            tools:text="Por: João Silva"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 