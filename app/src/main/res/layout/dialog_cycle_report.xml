<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Relatório Detalhado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_600"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Ícone -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_report"
            android:background="@drawable/circle_purple_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Relatório" />

        <!-- Mensagem -->
        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deseja gerar um relatório PDF detalhado do fechamento da rota?"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Informações do ciclo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/light_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informações do Ciclo"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_600"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCycleInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ciclo 2025 - #001"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvRouteInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rota: Centro"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Início: 01/01/2025 08:00"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:indicatorSize="36dp"
            app:trackThickness="3dp"
            app:indicatorColor="@color/purple_600" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancelar"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Gerar PDF"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:backgroundTint="@color/purple_600"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 