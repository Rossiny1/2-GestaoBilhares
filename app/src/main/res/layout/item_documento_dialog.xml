<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvDocumentoTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRATO"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_documento_tipo"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvDocumentoStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Ativo)"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvDocumentoData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15/01/2025 14:30"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:gravity="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDocumentoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrato 2025-0001"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

</LinearLayout>
