<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_primary"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvDocumentoTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTRATO"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_documento_tipo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvDocumentoStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(Ativo)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDocumentoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrato 2025-0001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvDocumentoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15/01/2025 14:30"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
