<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Barra de status lateral -->
        <View
            android:id="@+id/statusBar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@color/green_600" />

        <!-- Informações do cliente -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome do cliente -->
            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Bar do João" />

            <!-- Nome fantasia -->
            <TextView
                android:id="@+id/tvBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="João Comércio LTDA" />

            <!-- Endereço -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Rua das Palmeiras, 123 - Centro" />

        </LinearLayout>

        <!-- Lado direito: Status e valores -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="vertical">

            <!-- Tag de status especial -->
            <TextView
                android:id="@+id/tvSpecialTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/rounded_tag_red"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="ALTO DÉBITO" />

            <!-- Tag de status geral -->
            <TextView
                android:id="@+id/tvStatusTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_tag_green"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="EM DIA" />

            <!-- Débito atual do último acerto -->
            <LinearLayout
                android:id="@+id/layoutDebtInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/red_50"
                android:padding="12dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Débito Atual"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDebtIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_attach_money"
                        android:tint="@color/red_600" />

                    <TextView
                        android:id="@+id/tvCurrentDebt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_600"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="R$ 45,00" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 