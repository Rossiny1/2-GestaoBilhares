<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="90dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/purple_600"
    app:strokeWidth="1dp"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <!-- Ícone da lixeira no canto superior direito -->
        <ImageButton
            android:id="@+id/btnRetirarMesa"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Retirar Mesa"
            android:scaleType="fitCenter"
            app:tint="@color/red_600" />

        <!-- Texto "Mesa" centralizado no topo -->
        <TextView
            android:id="@+id/tvMesaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesa"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true" />

        <!-- Número da mesa centralizado abaixo do texto -->
        <TextView
            android:id="@+id/tvNumeroMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_below="@id/tvMesaLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView> 