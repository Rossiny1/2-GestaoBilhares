<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Moderno -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_billiard_hall"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Voltar"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="?attr/colorOnPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="12dp"
                    android:text="ðŸŽ± Gerenciar Mesas"
                    android:textColor="@color/text_on_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Cards de EstatÃ­sticas Gerais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center">

            <!-- Card Sinuca -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSinuca"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sinuca"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalSinuca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_table"
                        app:tint="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Jukebox -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardJukebox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSecondaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jukebox"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalJukebox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_table"
                        app:tint="?attr/colorOnSecondaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Pembolim -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPembolim"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorTertiaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pembolim"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalPembolim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_table"
                        app:tint="?attr/colorOnTertiaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Card DepÃ³sito -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDeposito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DepÃ³sito"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mesas disponÃ­veis para locaÃ§Ã£o"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvDepositoSinuca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S: 0"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvDepositoJukebox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J: 0"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvDepositoPembolim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P: 0"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- TÃ­tulo das Rotas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rotas"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Lista de Rotas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:paddingHorizontal="8dp"
            tools:listitem="@layout/item_rota_mesas" />

        <!-- Estado Vazio -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_table"
                app:tint="?attr/colorOnSurfaceVariant"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhuma rota encontrada"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <!-- FAB ExpandÃ­vel para Venda de Mesas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="?attr/colorPrimary"
        app:tint="?attr/colorOnPrimary"
        app:fabSize="normal" />

    <!-- FAB SecundÃ¡rio - Venda Mesa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVendaMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_sell"
        android:visibility="gone"
        app:backgroundTint="?attr/colorSecondary"
        app:tint="?attr/colorOnSecondary"
        app:fabSize="mini" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
