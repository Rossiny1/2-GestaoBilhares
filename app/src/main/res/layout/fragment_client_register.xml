<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar"
                android:src="@drawable/ic_arrow_back"
                app:tint="?attr/colorOnPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Cadastrar Cliente"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scroll View para o formulário -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card do Formulário -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Título da seção -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Informações Básicas"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Nome do Cliente -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Nome do Cliente *"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClientName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CPF/CNPJ -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="CPF/CNPJ"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCpfCnpj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Endereço -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Endereço *"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Bairro -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Bairro"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBairro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Cidade -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Cidade"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/actvCidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:completionThreshold="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Estado -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Estado"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/actvEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ✅ NOVO: Geolocalização -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="?attr/colorPrimary"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Localização GPS"
                                        android:textColor="?attr/colorOnSurface"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvLocationStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Não capturada"
                                        android:textColor="?attr/colorOnSurfaceVariant"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnCaptureLocation"
                                    style="@style/Widget.Material3.Button.TonalButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capturar"
                                    app:icon="@drawable/ic_gps"
                                    app:iconSize="20dp" />

                            </LinearLayout>

                            <!-- Coordenadas capturadas (visível apenas quando houver dados) -->
                            <LinearLayout
                                android:id="@+id/layoutCoordinates"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="12dp"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="?attr/colorOutlineVariant"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:id="@+id/tvCoordinates"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lat: -15.7942, Long: -47.8822"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:textSize="12sp"
                                    android:fontFamily="monospace"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvLocationAccuracy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Precisão: ±5m"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvLocationTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Capturada em: 06/01/2025 15:30"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Telefone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Telefone"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="+55 ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Telefone 2 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Telefone 2"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="+55 ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="E-mail"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Valor Ficha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Valor da Ficha"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etValorFicha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Comissão Ficha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Comissão por Ficha *"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etComissaoFicha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Débito Atual (Somente Leitura) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Débito Atual"
                        app:boxStrokeColor="?attr/colorOnSurfaceVariant"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:prefixText="R$ "
                        app:endIconDrawable="@drawable/ic_info"
                        app:endIconTint="?attr/colorOnSurfaceVariant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDebitoAtual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:enabled="false"
                            android:text="0,00"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Número do Contrato -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Número do Contrato"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNumeroContrato"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Cliente desde (Data de Cadastro) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Cliente desde"
                        app:boxStrokeColor="?attr/colorOnSurfaceVariant"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:endIconDrawable="@drawable/ic_info"
                        app:endIconTint="?attr/colorOnSurfaceVariant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClienteDesde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:maxLines="1"
                            android:enabled="false"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Observações -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Observações"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botões -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancel"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Cancelar" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSave"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Salvar Cliente" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Espaçamento final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 