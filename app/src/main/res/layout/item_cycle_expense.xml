<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/settlement_history_card_background">

        <!-- Informações da despesa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Descrição e categoria -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvExpenseDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Combustível"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Combustível" />

                <TextView
                    android:id="@+id/tvExpenseCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_category_tag"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Transporte"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="Transporte" />

            </LinearLayout>

            <!-- Valor e data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvExpenseValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 150,00"
                    android:textColor="@color/success_green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 150,00" />

                <TextView
                    android:id="@+id/tvExpenseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/01/2025"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="15/01/2025" />

            </LinearLayout>

            <!-- Observações (opcional) -->
            <TextView
                android:id="@+id/tvExpenseObservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Abastecimento para a semana"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Abastecimento para a semana"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Botões de ação -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botão de visualizar foto -->
            <ImageButton
                android:id="@+id/btnViewPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_camera"
                android:contentDescription="Visualizar foto do comprovante"
                android:visibility="gone"
                app:tint="@color/primary_blue" />

            <!-- Botão de exclusão -->
            <ImageButton
                android:id="@+id/btnDeleteExpense"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Excluir despesa"
                app:tint="@color/error_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>