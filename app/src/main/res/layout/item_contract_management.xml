<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header do Contrato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar do Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/blue_100">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="@color/blue_600" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Informações do Cliente -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvClienteNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Cliente"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="João Silva" />

                <TextView
                    android:id="@+id/tvClienteTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="(38) 99999-9999"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    tools:text="(38) 99999-9999" />

            </LinearLayout>

            <!-- Status do Contrato -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gerado"
                android:textColor="@color/green_600"
                app:chipBackgroundColor="@color/green_100"
                app:chipStrokeColor="@color/green_600"
                app:chipStrokeWidth="1dp"
                app:chipMinHeight="32dp"
                app:chipCornerRadius="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Assinado" />

        </LinearLayout>

        <!-- Informações do Contrato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Número do Contrato -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_contract"
                    app:tint="@color/gray_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contrato:"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNumeroContrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="2025-0001"
                    android:textColor="@color/blue_700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="2025-0001" />

                <!-- Badge de aditivos (append via código) -->
                

            </LinearLayout>

            <!-- Rota -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_route"
                    app:tint="@color/gray_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Rota:"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Rota Centro"
                    android:textColor="@color/green_700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Rota Centro" />

            </LinearLayout>

            <!-- Mesas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_table"
                    app:tint="@color/gray_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Mesas:"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMesas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="2 Sinucas"
                    android:textColor="@color/orange_700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="2 Sinucas" />

            </LinearLayout>

            <!-- Data de Criação -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/gray_600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Criado em:"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDataCriacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="12/01/2025"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="12/01/2025" />

            </LinearLayout>

        </LinearLayout>

        <!-- Ações do Contrato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <!-- Botão Visualizar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Visualizar"
                android:textSize="12sp"
                android:textColor="@color/blue_700"
                app:backgroundTint="@color/blue_100"
                app:cornerRadius="18dp"
                app:strokeColor="@color/blue_700"
                app:strokeWidth="2dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Botão Compartilhar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Compartilhar"
                android:textSize="12sp"
                android:textColor="@color/green_700"
                app:backgroundTint="@color/green_100"
                app:cornerRadius="18dp"
                app:strokeColor="@color/green_700"
                app:strokeWidth="2dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
