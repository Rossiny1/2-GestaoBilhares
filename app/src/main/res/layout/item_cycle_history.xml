<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorPrimaryContainer"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/settlement_history_card_background">

        <!-- Header com título e status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvCycleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ciclo de Acerto #001"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Ciclo de Acerto #001" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tag_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Finalizado"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Finalizado" />

        </LinearLayout>

        <!-- Datas do ciclo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_calendar_today"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvCycleDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                tools:text="01/01/2024" />

        </LinearLayout>

        <!-- Valores financeiros - Primeira linha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Receita -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receita"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 1.250,00"
                    android:textColor="@color/green_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 1.250,00" />

            </LinearLayout>

            <!-- Despesas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despesas"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvExpenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 350,00"
                    android:textColor="@color/red_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 350,00" />

            </LinearLayout>

            <!-- Lucro -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucro"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 900,00"
                    android:textColor="@color/green_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 900,00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Segunda linha - Descontos e Débito total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Descontos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descontos"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDiscounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 50,00"
                    android:textColor="@color/orange_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 50,00" />

            </LinearLayout>

            <!-- Débito total -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Débito total"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDebitTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textColor="@color/orange_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="R$ 2.500,00" />

            </LinearLayout>

            <!-- Espaço vazio para manter alinhamento -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Progresso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_people"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15/20 clientes"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                tools:text="15/20 clientes" />

            <TextView
                android:id="@+id/tvProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tag_green"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="75%"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="75%" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 