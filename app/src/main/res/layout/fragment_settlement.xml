<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_billiard_hall"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="ðŸŽ¯ Acerto"
            android:textColor="@color/text_on_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TÃ­tulo Cliente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_user"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="Ãcone de cliente"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cliente"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Nome do Cliente -->
                    <TextView
                        android:id="@+id/tvClientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="JoÃ£o da Silva" />

                    <!-- EndereÃ§o -->
                    <TextView
                        android:id="@+id/tvClientAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        tools:text="Rua das Flores, 123 - Centro" />

                    <!-- DÃ©bito Anterior -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="DÃ©bito Anterior"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPreviousDebt"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="R$ 0,00" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView para mesas do cliente -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMesasAcerto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:overScrollMode="never"
                tools:listitem="@layout/item_mesa_acerto" />

            <!-- Card Totais -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TÃ­tulo Totais -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_money"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="Ãcone de valores"
                            android:importantForAccessibility="no" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totais"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Total das Mesas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Total das Mesas"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTableTotal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/green_600"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="R$ 0,00" />

                    <!-- Valor Total (com dÃ©bito anterior) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Valor Total (com dÃ©bito anterior)"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTotalWithDebt"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/green_600"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="R$ 0,00" />

                    <!-- Desconto -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Desconto"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDesconto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- MÃ©todo de Pagamento (agora dentro do Card Totais) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MÃ©todo de Pagamento"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                    <AutoCompleteTextView
                        android:id="@+id/actvPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Selecione o mÃ©todo de pagamento"
                        android:inputType="none"
                        android:layout_marginBottom="12dp" />

                    <!-- Valor Recebido -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="Valor Recebido"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmountReceived"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- DÃ©bito Atual (SOMENTE LEITURA - VEM DO BANCO) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="DÃ©bito Atual"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCurrentDebt"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/red_600"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="R$ 0,00" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Novo Card: Campos Extras -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Campo Representante (apenas leitura) -->
                    <TextView
                        android:id="@+id/tvRepresentanteLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Representante"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvRepresentante"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="UsuÃ¡rio Logado"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp" />

                    <!-- âœ… NOVO: SeÃ§Ã£o de Pano -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:strokeColor="?attr/colorOutline"
                        app:strokeWidth="1dp">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pano da Mesa"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="8dp" />
                            
                            <!-- Container para as Ãºltimas trocas -->
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="120dp"
                                android:layout_marginBottom="12dp">
                                
                                <LinearLayout
                                    android:id="@+id/llUltimasTrocasPanos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" />
                            </ScrollView>
                            
                            <!-- BotÃ£o Trocar Pano -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTrocarPano"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Trocar Pano"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.Material3.Button.OutlinedButton" />
                            
                            <!-- Novo Pano Selecionado -->
                            <LinearLayout
                                android:id="@+id/layoutNovoPano"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/settlement_history_card_background"
                                android:padding="12dp"
                                android:visibility="gone">
                                
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    
                                    <TextView
                                        android:id="@+id/tvNovoPanoNumero"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="P002"
                                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                        android:textColor="@color/white" />
                                    
                                    <TextView
                                        android:id="@+id/tvNovoPanoInfo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Azul - Grande - Veludo"
                                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                                
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnConfirmarTroca"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Confirmar"
                                    style="@style/Widget.Material3.Button.OutlinedButton" />
                            </LinearLayout>
                            
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Caixa de seleÃ§Ã£o Tipo de Acerto -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de acerto"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />
                    <Spinner
                        android:id="@+id/spTipoAcerto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/tipos_acerto"
                        android:layout_marginBottom="8dp" />

                    <!-- Campo ObservaÃ§Ã£o -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ObservaÃ§Ã£o"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/etObservacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ObservaÃ§Ãµes do acerto"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4"
                        android:background="@drawable/rounded_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃ£o Salvar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveSettlement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:padding="16dp"
                android:text="ðŸ’¾ Salvar Acerto"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 