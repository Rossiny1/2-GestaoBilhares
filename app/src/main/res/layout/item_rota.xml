<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com nome da rota e status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rotaNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zona Sul"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Zona Sul" />

            <TextView
                android:id="@+id/rotaStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Em andamento"
                android:textColor="@color/primary_purple"
                android:textSize="12sp"
                tools:text="Em andamento" />

        </LinearLayout>

        <!-- Informações do ciclo atual -->
        <TextView
            android:id="@+id/rotaCiclo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1º Ciclo - 15/01/2025"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="1º Ciclo - 15/01/2025" />

        <!-- Informações da rota -->
        <TextView
            android:id="@+id/rotaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="78% de 32 clientes acertados"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="78% de 32 clientes acertados" />

        <!-- Status da rota com informações detalhadas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Quantidade de mesas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_table"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/rotaMesas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="45 mesas"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="45 mesas" />

            </LinearLayout>

            <!-- Pendências -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/warning_orange" />

                <TextView
                    android:id="@+id/rotaPendencias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="5 pendências"
                    android:textColor="@color/warning_orange"
                    android:textSize="12sp"
                    tools:text="5 pendências" />

            </LinearLayout>

            <!-- Botão de ação -->
            <ImageView
                android:id="@+id/rotaActionButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Ver detalhes"
                app:tint="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 