<!-- Label Débito Inicial (Migração) -->
                    <TextView
                        android:id="@+id/lblDebitoInicial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp"
                        android:text="Débito Inicial (migração)"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <!-- Débito Inicial (Migração) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDebitoInicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Débito Inicial"
                        app:boxStrokeColor="?attr/colorOnSurfaceVariant"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:prefixText="R$ "
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="?attr/colorOnSurfaceVariant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDebitoInicial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:text="0.00"
                            android:textColor="?attr/colorOnSurface" />

                    </com.google.android.material.textfield.TextInputLayout>
