<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¨ BACKGROUND GRADIENTE ELEGANTE PARA CARDS DE HISTÃ“RICO -->
<!-- Design profissional com excelente contraste e visibilidade -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Gradiente principal cinza escuro elegante -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF2D3748"
                android:centerColor="#FF1A202C"
                android:endColor="#FF0F1419"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Overlay sutil para profundidade -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1AFFFFFF"
                android:centerColor="#0AFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Borda sutil para definiÃ§Ã£o -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#334A5568" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list>
