<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ± CARD TEMÃTICO DE BILHAR -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fundo base com gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D3748"
                android:centerColor="#1A202C"
                android:endColor="#0F1419"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="#4A5568" />
        </shape>
    </item>
    
    <!-- Acento verde bilhar sutil -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A10B981" />
            <corners android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
    
    <!-- Sombra interna -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#11000000"
                android:endColor="#00000000"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
</layer-list>
