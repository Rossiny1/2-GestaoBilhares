<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorPrimaryContainer"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com número da mesa e tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNumeroMesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesa 201"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Mesa 201" />

                <TextView
                    android:id="@+id/tvTipoMesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sinuca"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    tools:text="Sinuca" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvValorVenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 2.500,00"
                android:textColor="@color/green_600"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="R$ 2.500,00" />

        </LinearLayout>

        <!-- Informações da mesa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamanho: "
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTamanhoMesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRANDE"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="GRANDE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • Estado: "
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvEstadoConservacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXCELENTE"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="EXCELENTE" />

        </LinearLayout>

        <!-- Informações do comprador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background_light"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprador"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvNomeComprador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Silva"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="João Silva" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tel: "
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTelefoneComprador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(11) 99999-9999"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    tools:text="(11) 99999-9999" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CPF/CNPJ: "
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCpfCnpjComprador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123.456.789-00"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    tools:text="123.456.789-00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data da venda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendida em: "
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDataVenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/01/2024"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="15/01/2024" />

        </LinearLayout>

        <!-- Observações -->
        <TextView
            android:id="@+id/tvObservacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observações sobre a venda..."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background_light"
            android:padding="8dp"
            android:visibility="gone"
            tools:text="Observações sobre a venda..."
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
