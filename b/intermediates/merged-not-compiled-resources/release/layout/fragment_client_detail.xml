<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_clientes">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Moderno -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_billiard_hall"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voltar"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_on_primary" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_whatsapp"
                    android:contentDescription="Abrir WhatsApp do cliente"
                    app:backgroundTint="@color/green_500"
                    app:fabSize="mini"
                    app:tint="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Ligar para o cliente"
                    app:backgroundTint="@color/accent_teal"
                    app:fabSize="mini"
                    app:tint="@color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Editar cliente"
                    app:backgroundTint="@color/orange_500"
                    app:fabSize="mini"
                    app:tint="@color/white" />

        </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Hero Section sem background extra - usando background_clientes -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <!-- Informações do Cliente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/transparent">

                <!-- Nome do Cliente com altura mínima -->
                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:minHeight="32dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Bar do João" />

                <!-- Endereço com altura mínima -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:minHeight="24dp">

                    <ImageView
                        android:id="@+id/ivLocationIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_location"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Abrir localização no mapa"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvClientAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Rua das Flores, 123 - Centro" />

                </LinearLayout>

                <!-- ✅ NOVO: Mensagem de Pendência -->
                <TextView
                    android:id="@+id/tvMensagemPendencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background_warning"
                    android:backgroundTint="@color/orange_500"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Nunca acertado"
                    tools:visibility="visible" />

                <!-- Stats Cards melhorados -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:minHeight="60dp">

                    <!-- Card Última Visita com Transparência Temática -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:strokeColor="@color/accent_teal"
                        app:strokeWidth="2dp"
                        app:cardBackgroundColor="@color/surface_card_transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvLastVisit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="15/05/2024" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Última Visita"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Débito Atual com Transparência Temática -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:strokeColor="@color/error_red"
                        app:strokeWidth="2dp"
                        app:cardBackgroundColor="@color/surface_card_transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvClientCurrentDebt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red_600"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="R$ 450,00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Débito Atual"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>





        <!-- Seção Mesas do Cliente -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

        <!-- Título Mesas do Cliente em linha única -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesas do Cliente"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Total de mesas ativas com ícone -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background_primary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_sinuca"
                    android:contentDescription="Ícone de sinuca"
                    android:importantForAccessibility="no"
                    app:tint="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/tvTotalMesasAtivas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMesasCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_mesa_cliente" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Seção Histórico de Acertos -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Cabeçalho: Título + Botão Mais na mesma linha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Histórico de Acertos"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/historyProgress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    android:indeterminateTint="?attr/colorPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistoryLimit"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Mais"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_history"
                    app:iconSize="16dp"
                    app:iconPadding="4dp"
                    app:iconTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Lista de acertos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSettlementHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="400dp"
                android:nestedScrollingEnabled="true"
                android:visibility="visible"
                android:clipToPadding="false"
                tools:listitem="@layout/item_settlement_history"
                tools:itemCount="3" />

        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

</ScrollView> 

    <!-- FAB Principal -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Menu de ações"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/yellow_600"
        app:tint="@color/white"
        app:fabSize="normal" />

    <!-- Container para FABs expandidos -->
    <LinearLayout
        android:id="@+id/fab_expanded_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <!-- FAB Adicionar Mesa com Label -->
        <LinearLayout
            android:id="@+id/fab_add_table_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?attr/colorSurface"
            android:elevation="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Mesa"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Adicionar Mesa"
                android:src="@drawable/ic_table"
                app:fabSize="mini"
                app:backgroundTint="@color/blue_600"
                app:tint="@color/white"
                android:clickable="false" />

        </LinearLayout>

        <!-- FAB Contrato com Label -->
        <LinearLayout
            android:id="@+id/fab_contract_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?attr/colorSurface"
            android:elevation="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrato"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Gerar Contrato"
                android:src="@drawable/ic_contract"
                app:fabSize="mini"
                app:backgroundTint="?attr/colorPrimary"
                app:tint="@color/white"
                android:clickable="false" />

        </LinearLayout>

        <!-- FAB Novo Acerto com Label -->
        <LinearLayout
            android:id="@+id/fab_new_settlement_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?attr/colorSurface"
            android:elevation="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novo Acerto"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_new_settlement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Novo Acerto"
                android:src="@drawable/ic_receipt"
                app:fabSize="mini"
                app:backgroundTint="@color/green_600"
                app:tint="@color/white"
                android:clickable="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 