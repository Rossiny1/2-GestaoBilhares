<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/divider_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com valor e data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvExpenseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 150,00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    tools:text="R$ 150,00" />

                <TextView
                    android:id="@+id/tvExpenseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/01/2024"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="15/01/2024" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvCycleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1º Acerto - 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_cycle_chip"
                android:padding="6dp"
                tools:text="1º Acerto - 2024" />

        </LinearLayout>

        <!-- Descrição -->
        <TextView
            android:id="@+id/tvExpenseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combustível para viagem"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            tools:text="Combustível para viagem" />

        <!-- Categoria e Tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvExpenseCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transporte"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_category"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                tools:text="Transporte" />

            <TextView
                android:id="@+id/tvExpenseType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Combustível"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@drawable/ic_type"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                tools:text="Combustível" />

        </LinearLayout>

        <!-- Observações (se houver) -->
        <TextView
            android:id="@+id/tvExpenseObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viagem para reunião mensal"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="Viagem para reunião mensal"
            tools:visibility="visible" />

        <!-- Footer com criado por -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Criado por:"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvCreatedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Silva"
                android:textSize="10sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                tools:text="João Silva" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
