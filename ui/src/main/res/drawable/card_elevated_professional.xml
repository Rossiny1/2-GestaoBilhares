<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¨ CARD PROFISSIONAL COM SOMBRA ELEGANTE -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra sutil -->
    <item android:top="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Card principal -->
    <item android:bottom="2dp" android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background_dark" />
            <stroke 
                android:width="1dp" 
                android:color="@color/card_stroke" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
</layer-list>
