<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do cliente e valor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="João Silva"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="João Silva" />

            <TextView
                android:id="@+id/tvClientValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 150,00"
                android:textColor="@color/success_green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="R$ 150,00" />

        </LinearLayout>

        <!-- Data do acerto -->
        <TextView
            android:id="@+id/tvClientDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="15/01/2025"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="15/01/2025" />

        <!-- Observações (opcional) -->
        <TextView
            android:id="@+id/tvClientObservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Acerto realizado com sucesso"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Acerto realizado com sucesso"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 