<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvResumoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvResumoMesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesas"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvResumoTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvResumoPagamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Métodos de Pagamento"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvResumoObservacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Observação"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImprimir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imprimir Acerto"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp" />
    </LinearLayout>

</LinearLayout> 