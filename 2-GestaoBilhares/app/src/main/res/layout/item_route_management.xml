<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#23273A"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nome da rota -->
        <TextView
            android:id="@+id/routeNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome da Rota"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editButton" />

        <!-- Colaborador responsável -->
        <TextView
            android:id="@+id/collaboratorText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Responsável: João Silva"
            android:textColor="#99FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/routeNameText"
            app:layout_constraintEnd_toStartOf="@id/editButton" />

        <!-- Cidades da rota -->
        <TextView
            android:id="@+id/citiesText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cidades: São Paulo, Santos, Guarujá"
            android:textColor="#99FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collaboratorText"
            app:layout_constraintEnd_toStartOf="@id/editButton" />

        <!-- Data de criação -->
        <TextView
            android:id="@+id/createdDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Criado em: 15/12/2023 às 14:30"
            android:textColor="#66FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/citiesText"
            app:layout_constraintEnd_toStartOf="@id/editButton" />

        <!-- Data da última atualização -->
        <TextView
            android:id="@+id/lastUpdatedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Atualizado em: 20/12/2023 às 10:15"
            android:textColor="#66FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createdDateText"
            app:layout_constraintEnd_toStartOf="@id/editButton" />

        <!-- Botão editar -->
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar rota"
            app:tint="#A68EFF"
            app:layout_constraintEnd_toStartOf="@id/deleteButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />

        <!-- Botão excluir -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_delete"
            android:contentDescription="Excluir rota"
            app:tint="#FF6B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 